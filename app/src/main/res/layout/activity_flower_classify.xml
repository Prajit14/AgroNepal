<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientbackground"
    tools:context=".Identify.FlowerClassify">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="417dp"
        android:layout_height="55dp"
        android:layout_marginTop="4dp"

        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PLANT IDENTIFICATION"
            android:fontFamily="@font/amarante"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:id="@+id/toolbar_title"/>
    </androidx.appcompat.widget.Toolbar>


    <ImageView
        android:id="@+id/image"
        android:layout_width="424dp"
        android:layout_height="323dp"
        android:layout_marginTop="96dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar3"
        app:srcCompat="@drawable/clickme" />

    <TextView
        android:id="@+id/classifytext"
        android:layout_width="329dp"
        android:layout_height="54dp"
        android:layout_marginTop="36dp"
        android:textSize="30sp"
        android:fontFamily="@font/amarante"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image" />

    <Button
        android:id="@+id/classify"
        android:layout_width="371dp"
        android:layout_height="47dp"
        android:text="Identify"
        android:background="@drawable/gradientbutton"
        android:textAlignment="center"
        android:fontFamily="@font/amarante"
        android:textSize="30sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/classifytext"
        app:layout_constraintVertical_bias="0.314" />
</androidx.constraintlayout.widget.ConstraintLayout>